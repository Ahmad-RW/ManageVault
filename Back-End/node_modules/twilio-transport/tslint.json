{
  "rules": {
    "curly": true,
    "eofline": false,
    "align": [true, "parameters"],
    "class-name": true,
    "indent": [true, "spaces"],
    "max-line-length": [true, 150],
    "no-consecutive-blank-lines": true,
    "no-trailing-whitespace": true,
    "no-duplicate-variable": true,
    "no-var-keyword": true,
    "one-line": [true,
      "check-else",
      "check-whitespace",
      "check-open-brace"],
    "quotemark": [true,
      "single",
      "avoid-escape"],
    "semicolon": true,
    "whitespace": [true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"],
    "typedef-whitespace": [true, {
      "call-signature": "onespace",
      "index-signature": "onespace",
      "parameter": "onespace",
      "property-declaration": "onespace",
      "variable-declaration": "onespace"
    }]
  }
}
